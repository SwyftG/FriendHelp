<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:elevation="5dp"
    android:id="@+id/home_detail_activity_item"
    cart_view:cardCornerRadius="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="2dp"
    xmlns:cart_view="http://schemas.android.com/apk/res-auto"
    xmlns:igg="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <friendshelp.android.com.bylianggao.customSuperCircularImageView
            android:layout_height="64dp"
            android:layout_width="64dp"
            android:layout_marginLeft="16dp"
            android:scaleType="center"
            android:layout_gravity="center"
            igg:siBorderWidth="1dp"

            android:id="@+id/friend_activity_list_item_photo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"

            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/friend_activity_list_item_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="15sp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/friend_activity_list_item_city"/>

    </LinearLayout>
</android.support.v7.widget.CardView>